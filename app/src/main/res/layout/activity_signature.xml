<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="友情提示：根据公安部，工信部门提示，您的签字是有法律效力的，请仔细阅读条款后签字"
            android:textColor="@color/text_dark33"
            android:textSize="@dimen/text15sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fl_main"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/fl_main"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="6dp"
            android:weightSum="2"
            android:layout_marginRight="12dp"
            >

            <TextView
                android:id="@+id/tv_clearAll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="清空"
                android:background="@drawable/rect_line"
                android:layout_marginRight="10dp"
                android:textColor="@color/main_red"
                android:textSize="@dimen/text15sp" />

            <TextView
                android:id="@+id/tv_che"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:background="@drawable/rect_line"
                android:gravity="center"
                android:text="撤销"
                android:textColor="@color/text_dark33"
                android:textSize="@dimen/text15sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_save"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:background="@drawable/rect_green"
            android:gravity="center"
            android:text="完成"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text15sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>