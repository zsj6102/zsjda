<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="请输入您的旧密码"
        android:textColor="@color/text_dark66"
        android:textSize="15sp"
        android:visibility="visible" />

    <com.colpencil.propertycloud.Ui.PasswordView
        android:id="@+id/password_view"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="12sp"
        app:pivBorderColor="@color/divide_line1"
        app:pivBorderRadius="2dp"
        app:pivBorderWidth="0.5dp"
        app:pivPasswordColor="@color/text_dark66"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="10dp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="请输入您的旧密码"
        android:textColor="@color/text_dark66"
        android:textSize="15sp"
        android:visibility="gone" />

    <com.colpencil.propertycloud.Ui.PasswordView
        android:id="@+id/password_view1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="12sp"
        android:visibility="gone"
        app:pivBorderColor="@color/divide_line1"
        app:pivBorderRadius="2dp"
        app:pivBorderWidth="0.5dp"
        app:pivPasswordColor="@color/text_dark66"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include
        layout="@layout/include_keyboardview"/>

</LinearLayout>