<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/joke_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.property.colpencil.colpencilandroidlibrary.Ui.RecylerView.AutoLoadRecylerView
            android:id="@+id/record_recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <include
        layout="@layout/loading_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        layout="@layout/empty_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        layout="@layout/error_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
