<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_fit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_comiuty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="选择我要装修的房产："
                    android:textColor="@color/text_dark33" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/rigth_jian" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/main_bg">

                <ImageView
                    android:id="@+id/iv_check1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/un_check" />

                <TextView
                    android:id="@+id/tv_materail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_check1"
                    android:text="《装修管理规定》"
                    android:textColor="@color/text_dark33"
                    android:textSize="@dimen/text15sp" />

                <TextView
                    android:id="@+id/tv_do1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rect_penk"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="填写"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text14sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:background="@color/main_bg">

                <ImageView
                    android:id="@+id/iv_check2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/un_check" />

                <TextView
                    android:id="@+id/tv_materail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_check2"
                    android:text="《装修承诺书》"
                    android:textColor="@color/text_dark33"
                    android:textSize="@dimen/text15sp" />

                <TextView
                    android:id="@+id/tv_do2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rect_penk"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="填写"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text14sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:background="@color/main_bg">

                <ImageView
                    android:id="@+id/iv_check3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/un_check" />

                <TextView
                    android:id="@+id/tv_materail3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_check3"
                    android:text="《装修申请表》"
                    android:textColor="@color/text_dark33"
                    android:textSize="@dimen/text15sp" />

                <TextView
                    android:id="@+id/tv_do3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rect_penk"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="填写"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text14sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:background="@color/main_bg">

                <ImageView
                    android:id="@+id/iv_check4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/un_check" />

                <TextView
                    android:id="@+id/tv_materail4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_check4"
                    android:text="《装修公司资质》扫描件"
                    android:textColor="@color/text_dark33"
                    android:textSize="@dimen/text15sp" />

                <TextView
                    android:id="@+id/tv_do4"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rect_penk"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="上传"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_warn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:text="若您是自组团队装修，请上传工程负责人身份证正反面"
                android:textColor="@color/text_dark99"
                android:textSize="12sp" />

            <com.property.colpencil.colpencilandroidlibrary.Ui.ColpencilGridView
                android:id="@+id/cl_mater1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:divider="#00000000"
                android:dividerHeight="0dp"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="10dp"></com.property.colpencil.colpencilandroidlibrary.Ui.ColpencilGridView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:background="@color/main_bg">

                <ImageView
                    android:id="@+id/iv_check5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/un_check" />

                <TextView
                    android:id="@+id/tv_materail5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_check5"
                    android:text="  装修设计资料扫描件"
                    android:textColor="@color/text_dark33"
                    android:textSize="@dimen/text15sp" />

                <TextView
                    android:id="@+id/tv_do5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rect_penk"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="上传"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text14sp" />
            </RelativeLayout>

            <com.property.colpencil.colpencilandroidlibrary.Ui.ColpencilGridView
                android:id="@+id/cl_mater2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:divider="#00000000"
                android:dividerHeight="0dp"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="10dp"></com.property.colpencil.colpencilandroidlibrary.Ui.ColpencilGridView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/main_bg">

                <ImageView
                    android:id="@+id/iv_check6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/un_check" />

                <TextView
                    android:id="@+id/tv_materail6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_check6"
                    android:text="《装修人员登记表》"
                    android:textColor="@color/text_dark33"
                    android:textSize="@dimen/text15sp" />

                <TextView
                    android:id="@+id/tv_do6"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rect_penk"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="填写"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text14sp" />
            </RelativeLayout>



            <LinearLayout
                android:id="@+id/ll_guan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="14dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可关联装修订单"
                        android:textColor="@color/text_dark99"
                        android:textSize="@dimen/text14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="关联后可享受平台赠送的各种服务"
                        android:textColor="@color/main_red"
                        android:textSize="@dimen/text14sp" />
                </LinearLayout>

                <com.property.colpencil.colpencilandroidlibrary.Ui.ColpencilListView
                    android:id="@+id/lv_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:choiceMode="singleChoice"
                    android:divider="@color/white"></com.property.colpencil.colpencilandroidlibrary.Ui.ColpencilListView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_jian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="关联后您可实时查看该订单赠送的监理日记和摄像头直播"
                    android:textColor="@color/text_dark99"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:text="主动添加"
                        android:textColor="@color/text_dark33"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="15dp"
                    android:text="若您是到物业公司主动申请，可请工作人员告知您监理编号后添加即可关联"
                    android:textColor="@color/text_dark66"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="监理编号："
                        android:textColor="@color/text_dark33"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_jian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/textView"
                        android:layout_toLeftOf="@+id/button"
                        android:layout_toRightOf="@+id/textView"
                        android:background="@color/white"
                        android:hint="请输入监理编号"
                        android:textColorHint="@color/text_dark99"
                        android:textSize="@dimen/text15sp" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/rect_blue"
                        android:text="添加"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">


                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="摄像头租赁编号："
                        android:textColor="@color/text_dark33"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_zu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/textView1"
                        android:layout_toLeftOf="@+id/button1"
                        android:layout_toRightOf="@+id/textView1"
                        android:background="@color/white"
                        android:hint="请输入租赁编号"
                        android:textColorHint="@color/text_dark99"
                        android:textSize="@dimen/text15sp" />

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/rect_blue"
                        android:text="添加"
                        android:textColor="@color/white" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@mipmap/fit_check"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已阅读并同意"
                android:textColor="@color/text_dark99"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_xie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《大爱齐家用户协议》"
                android:textColor="@color/main_blue"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cun"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="存为草稿"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rect_penk"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="提交申请"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/rect_blue"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>