<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bottom_title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/main_blue"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/text17sp" />

        <com.colpencil.propertycloud.Ui.WheelView
            android:id="@+id/bottom_wv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bottomDialog_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/rect_line_blue"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/main_blue"
                android:textSize="@dimen/text15sp" />

            <View
                android:layout_width="12dp"
                android:layout_height="wrap_content"></View>

            <TextView
                android:id="@+id/bottomDialog_ok"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/rect_blue"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/text15sp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>