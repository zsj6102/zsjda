<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_family"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_f6f6f6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_family_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/text_dark33"
                        android:textSize="15sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/tv_choose_address"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rect_penk"
                    android:text="修改位置"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_long_press"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="长按说一说您碰到的问题吧"
                android:textColor="@color/text_dark99"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_record_time"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="16.5dp"
                android:background="@drawable/rect_record_shape"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/record_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="4.23"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12.5dp"
                    android:src="@mipmap/repair_rudio_bg" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.colpencil.propertycloud.Ui.AVLoadingIndicatorView
                        android:id="@+id/indicator_left"
                        android:layout_width="55dp"
                        android:layout_height="20dp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_left"
                        android:layout_width="55dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/record_iv_left"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_record_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:format="%s"
                        android:textColor="@color/text_dark66"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="55dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/record_iv_left"
                        android:visibility="gone" />

                    <com.colpencil.propertycloud.Ui.AVLoadingIndicatorView
                        android:id="@+id/indicator_right"
                        android:layout_width="55dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="6dp"
                        android:visibility="visible" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_del"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/record_delete"
                    android:visibility="visible" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_lu"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/record_music_image" />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/record_pause"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_select_time"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rect_f6f6f6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="点击修改维修时间"
                        android:textColor="@color/text_dark33"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="尽快维修"
                        android:textColor="@color/text_dark33"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/rigth_jian" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_choose_img"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_add_pic"
                    android:layout_width="24.5dp"
                    android:layout_height="24.5dp"
                    android:src="@mipmap/repair_select_photo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="点击拍照取证吧！"
                    android:textColor="@color/text_dark33"
                    android:textSize="15sp" />

            </LinearLayout>

            <com.property.colpencil.colpencilandroidlibrary.Ui.ColpencilGridView
                android:id="@+id/gl_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.5dp"
                android:layout_marginRight="4.5dp"
                android:numColumns="3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical|left"
                android:text="文字说明"
                android:textColor="@color/text_dark99"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_f6f6f6"
                android:gravity="left|top"
                android:padding="15dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_toll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="12dp"
                    android:text="上门费"
                    android:textColor="@color/text_dark66"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="10元"
                    android:textColor="@color/main_red"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="，维修费另算"
                    android:textColor="@color/text_dark66"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="135.5dp"
            android:layout_height="match_parent"
            android:background="@color/line2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/repair_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="电话报修"
                android:textColor="@color/text_dark33"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_blue"
            android:text="提交报修"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>